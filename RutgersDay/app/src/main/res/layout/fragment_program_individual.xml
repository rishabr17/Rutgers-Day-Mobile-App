<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#f2ece8"
    android:id="@+id/linlayout">
    <android.support.v7.widget.CardView
        android:id="@+id/rootView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="false">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/main_header_selector">

            <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_weight="0.23" />
    <TextView
        android:text="Chat with an Admissions Counselor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/programTitle"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:background="#2175a5"
        android:textAlignment="center" />

            <TextView
        android:text="Department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/department"
        android:textSize="18sp"
        android:textColor="#2175a5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:layout_weight="0.23"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.23"
                android:layout_marginTop="5dp">

                <TextView
            android:text="College Ave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/campus"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/wallet_hint_foreground_holo_dark"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:text="ADD"
                    android:textColor="@android:color/white"
                    android:id="@+id/addButton"
                    android:layout_marginRight="5dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:elevation="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

                <TextView
            android:text="Program Type"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/programType"
            android:textSize="18sp"
            android:textColor="@color/wallet_hint_foreground_holo_dark"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/space"
            android:layout_weight="1" />

                <TextView
            android:text="3:00pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textSize="18sp"
            android:textColor="@color/wallet_hint_foreground_holo_dark"
            android:textAlignment="gravity"
            android:layout_marginRight="10dp" />

            </LinearLayout>

    <TextView
        android:text="Interested in becoming a Scarlet Knight? We'll be available to answer your questions about the application process. "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/description"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:nestedScrollingEnabled="true"
        android:textSize="16sp" />
    </LinearLayout>
    </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>